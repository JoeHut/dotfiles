# resize window (you can also use the mouse for that)
mode "resize" {
        # These bindings trigger as soon as you enter the resize mode

        # Pressing left will shrink the window’s width.
        # Pressing right will grow the window’s width.
        # Pressing up will shrink the window’s height.
        # Pressing down will grow the window’s height.
        bindsym h resize shrink width 10 px or 10 ppt
        bindsym j resize grow height 10 px or 10 ppt
        bindsym k resize shrink height 10 px or 10 ppt
        bindsym l resize grow width 10 px or 10 ppt

        # same bindings, but for the arrow keys
        bindsym Left resize shrink width 10 px or 10 ppt
        bindsym Down resize grow height 10 px or 10 ppt
        bindsym Up resize shrink height 10 px or 10 ppt
        bindsym Right resize grow width 10 px or 10 ppt

        # back to normal: Enter or Escape
        bindsym Return mode "default"
        bindsym Escape mode "default"
}

bindsym $mod+r mode "resize"

# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
        status_command ICON_COLOR="#305798" TEXT_COLOR=#6C919E SCRIPT_DIR=~/.config/i3blocks i3blocks -c ~/.config/i3blocks/config 2> ~/tmp/log.log
        tray_output primary
        colors {
            separator   #6c919eff
            background  #ffffff
            statusline  #6c919eff
        }
}


# Pulse Audio controls
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume 1 +5%
#increase sound volume
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume 1 -5%
#decrease sound volume
bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute 1 toggle 
#mute sound

# Sreen brightness controls
bindsym XF86MonBrightnessUp exec xbacklight -inc 10 # increase screen brightness
bindsym XF86MonBrightnessDown exec xbacklight -dec 10 # decrease screen brightness

set $Locker /home/joe/.config/i3/lock.sh

set $mode_system System (l) lock, (e) logout, (s) suspend, (h) hibernate, (r) reboot, (Shift+s) shutdown
mode "$mode_system" {
    bindsym l exec --no-startup-id $Locker, mode "default"
    bindsym e exec --no-startup-id i3-msg exit, mode "default"
    bindsym s exec --no-startup-id $Locker && systemctl suspend, mode "default"
    bindsym h exec --no-startup-id $Locker && systemctl hibernate, mode "default"
    bindsym r exec --no-startup-id systemctl reboot, mode "default"
    bindsym Shift+s exec --no-startup-id systemctl poweroff -i, mode "default"  

    # back to normal: Enter or Escape
     bindsym Return mode "default"
     bindsym Escape mode "default"
}

bindsym $mod+x mode "$mode_system"

set $mode_luxafor Flag (r) red, (g) green, (b) blue, (o) prorange (p) party
mode "$mode_luxafor" {
	bindsym r exec --no-startup-id luxafor-linux.py fade -l 255 -s 64 -r 255 -g 0 -b 0, mode "default"
	bindsym g exec --no-startup-id luxafor-linux.py fade -l 255 -s 64 -r 0 -g 255 -b 0, mode "default"
	bindsym b exec --no-startup-id luxafor-linux.py fade -l 255 -s 64 -r 0 -g 0 -b 255, mode "default"
	bindsym o exec --no-startup-id luxafor-linux.py fade -l 255 -s 64 -r 244 -g 121 -b 32, mode "default"
	bindsym p exec --no-startup-id luxafor-linux.py pattern -p 3 -r 2, mode "default"

	bindsym Return mode "default"
	bindsym Escape mode "default"
}

bindsym $mod+q mode "$mode_luxafor"

bindsym $mod+Tab focus right
bindsym $mod+Shift+Tab focus left

